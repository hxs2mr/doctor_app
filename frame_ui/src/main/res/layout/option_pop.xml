<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_gravity="center"
        >
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/option_pop_back_linear"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="{fa-chevron-left}"
                />
        </android.support.v7.widget.LinearLayoutCompat>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#898EA6"
            android:textSize="18sp"
            android:text="反馈情况"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/qian_pop_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#f4f8fc"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@mipmap/qianok_bg"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="反馈成功"
                android:textColor="#898EA6"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                />
            <TextView
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:textColor="#A2ADCE"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text="我们会很耐心的查看您的宝贵意见 谢谢亲 祝你工作顺利 生活美满幸福！"
                />

            <TextView
                android:id="@+id/qianok_back"
                android:layout_width="230dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_height="66dp"
                android:background="@mipmap/btn_login"
                android:textColor="#ffffff"
                android:text="确定"
                android:textSize="20sp"
                android:gravity="center"
                android:paddingBottom="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>