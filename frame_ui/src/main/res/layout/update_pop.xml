<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#00000000"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/infomationitem_back"
        >
        
        <FrameLayout
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            >
            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@mipmap/update_back"
                />
            <TextView
                android:id="@+id/update_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="v2.0"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                />

        </FrameLayout>
        <TextView
            android:id="@+id/update_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="#A8BED3"
            android:layout_marginTop="10dp"
            android:text="新版本大小:15M"
            />


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/update_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#A8BED3"
            android:layout_marginBottom="20dp"
            android:text=" 1、优化界面的体验效果;\n 2、解决若干BUG \n 3、提升数据图"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="#F4F8FC"
            >
            <TextView
                android:id="@+id/update_cancal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="以后再说"
                android:textSize="17sp"
                android:layout_marginLeft="35dp"
                android:layout_gravity="center"
                android:textColor="#8ccccc"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/update_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即更新"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginRight="35dp"
                android:textColor="#ff99cc"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp" />
</LinearLayout>