<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/patient_toolbar"
        android:paddingTop="25dp"
        android:background="#ffffff"
        app:layout_behavior="microtech.hxswork.com.frame_ui.main.Patient.TransluncentBehavior"
        android:layout_height="70dp"

        >
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/patient_next_back_linear"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:text="{fa-chevron-left}"
                    />
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/patient_next_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#525F66"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:text="患者姓名"
                />
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/patient_next_persion"
                android:layout_width="26dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:background="@mipmap/patient_next_persion"
                />
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/patient_next_swipe"
        android:layout_width="match_parent"
        android:background="#F0F5F7"
        android:layout_height="match_parent"
        >
<android.support.v7.widget.RecyclerView
    android:id="@+id/patient_next_recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F5F7"
    />

    </android.support.v4.widget.SwipeRefreshLayout>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/patient_next_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|bottom"
            android:background="@mipmap/icon_quest_add"
            />

    </FrameLayout>

</android.support.v7.widget.LinearLayoutCompat>